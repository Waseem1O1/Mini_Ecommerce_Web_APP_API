@model EditRoleModel

@{
    ViewBag.Title = "Edit Role";
}

<form method="post" class="mt-3">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-sm-10  p-1 border bg-light shadow-lg p-3 mb-5 mt-1 bg-body rounded text-center">
                <div class="display-4">
                    <i class="bi bi-pencil-square text-primary"></i>
                </div>
                <h5>Update Selected Role</h5>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                @*                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                *@                @* <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control">
                    </div>*@
                <div class="row justify-content-center">
                    <div class="col-sm-7">
                        <div class="form-group justify-content-start">
                            <label asp-for="RoleName"></label>
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary text-light" id="basic-addon1"><i class="bi bi-envelope"></i></span>
                                <input asp-for="RoleName" class="form-control" />
                            </div>
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                        <button type="submit" class="btn btn-primary w-100">Update</button><hr />
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h5>Users in this role</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5>@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                        <hr />

                        <a asp-controller="Admin" asp-action="EditUsersInRole"
                           asp-route-roleId="@Model.Id" style="width:30%" class="btn btn-warning">
                            Edit Users in This Role
                        </a>
                    </div>

                </div>
                <br />
                <a asp-action="ListRoles" class="btn btn-secondary">Back to list</a>

            </div>
        </div>
    </div>


</form>