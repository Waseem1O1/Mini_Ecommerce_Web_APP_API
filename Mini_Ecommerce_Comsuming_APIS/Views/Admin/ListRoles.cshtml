@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<div class="container-fluid p-1 border bg-light shadow-lg p-3 mb-5 mt-5 bg-body rounded">
    <div class="row">
        <div class="col-sm-10"> <h5>All Roles List</h5></div>
        <div class="col-sm-2">
            <a class="btn btn-warning w-100"  asp-action="Create_Role"
               asp-controller="Admin">Add New Role</a>
        </div>
    </div>
    <hr />
    @if (Model.Any())
    {
        foreach (var role in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
        {
            <div class=" row justify-content-center items mt-1">
                <div class="col-sm-2">
                    @role.Index
                </div> <div class="col-sm-5">
                    @role.Data.Id
                </div>
                <div class="col-sm-3">
                    @role.Data.Name
                </div>
                <div class="col-sm-2">
                    <a asp-controller="Admin" asp-action="EditRole"
               asp-route-id="@role.Data.Id" class="btn btn-primary w-100">
                        Edit
                    </a>              @*  <a href="#" class="btn btn-danger">Delete</a>*@
                </div>

            </div>
            <hr />
        }

    }
    else
    {
        <div class="card">
            <div class="card-header">
                No roles created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a role
                </h5>
                <a class="btn btn-primary" style="width:auto"
               asp-controller="administration" asp-action="CreateRole">
                    Create Role
                </a>
            </div>
        </div>
    }
</div>
</div>

